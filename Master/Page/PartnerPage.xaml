<UserControl x:Class="Master.Page.PartnerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Master.Page"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1000">
    <ScrollViewer  HorizontalScrollBarVisibility="Auto" Background="White">
        <StackPanel>
        <StackPanel Orientation="Vertical">
            <ListBox ItemsSource="{Binding PartnerList}"
                 SelectedItem="{Binding SelectedPartner}"
                 Grid.Column="0"
                 Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10">
                    <TextBlock Text="Название:" FontSize="32" Margin="40 0 0 10"/>
                            <TextBox Text="{Binding Name}" FontSize="32" Height="50" Background="LightGray" Width="900"/>
                    <TextBlock Text="Адрес:" FontSize="32" Margin="40 0 0 10"/>
                            <TextBox Text="{Binding Address}" FontSize="32" Height="50" Background="LightGray" Width="900"/>
                    <TextBlock Text="Рейтинг:" FontSize="32" Margin="40 0 0 10"/>
                            <TextBox Text="{Binding Rating}" FontSize="32" Height="50" Background="LightGray" Width="900"/>
                    <TextBlock Text="Имя директора:" FontSize="32" Margin="40 0 0 10"/>
                            <TextBox Text="{Binding DirectorFirstName}" FontSize="32"  Height="50" Background="LightGray" Width="900"/>
                    <TextBlock Text="Фамилия директора:" FontSize="32" Margin="40 0 0 10"/>
                            <TextBox Text="{Binding DirectorMiddleName}" FontSize="32"  Height="50" Background="LightGray" Width="900"/>
                            <TextBlock Text="Отчество директора:" FontSize="32"   Margin="40 0 0 10"/>
                            <TextBox Text="{Binding DirectorLastName}" FontSize="32" Height="50" Background="LightGray" Width="900"/>
                    <TextBlock Text="Номер телефона:" FontSize="32" Margin="40 0 0 10"/>
                            <TextBox Text="{Binding Phone}" FontSize="32" Height="50" Background="LightGray" Width="900"/>
                    <TextBlock Text="Email" FontSize="32" Margin="40 0 0 10"/>
                            <TextBox Text="{Binding Email}" FontSize="32"  Height="50" Background="LightGray" Width="900"/>
                                <Border CornerRadius="30">
                                    <Button Width="400" Height="60" Content="Редактрировать" Command="{Binding DataContext.UpdatePartnerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}"/>
                                </Border>

                            </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </StackPanel>
